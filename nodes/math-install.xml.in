<package>atlas_ROLLCOMPILER</package>
<package>lapack_ROLLCOMPILER</package>
<package>scalapack_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>parmetis_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>superlu_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>sprng_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>petsc_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>octave</package>
<package>trilinos_ROLLCOMPILER_ROLLNETWORK_ROLLMPI</package>
<package>gsl_ROLLCOMPILER</package>

<post>

<file name="/etc/profile.d/atlas.csh" perms="0644">
setenv LD_LIBRARY_PATH /opt/atlas/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
setenv LIBPATH /opt/atlas/ROLLCOMPILER/lib:$LIBPATH
</file>

<file name="/etc/profile.d/atlas.sh" perms="0644">
export LD_LIBRARY_PATH=/opt/atlas/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=/opt/atlas/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
</file>


<file name="/etc/profile.d/lapack.csh" perms="0644">
setenv LD_LIBRARY_PATH /opt/lapack/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
setenv LIBPATH /opt/lapack/ROLLCOMPILER/lib:$LIBPATH
</file>

<file name="/etc/profile.d/lapack.sh" perms="0644">
export LD_LIBRARY_PATH=/opt/lapack/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=/opt/atlas/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
</file>


<file name="/etc/profile.d/octave.csh" perms="0644">
setenv PATH /opt/octave/bin:$PATH
</file>

<file name="/etc/profile.d/octave.sh" perms="0644">
export PATH=/opt/octave/bin:$PATH
</file>

<file name="/etc/profile.d/gsl.csh" perms="0644">
setenv PATH /opt/gsl/bin:$PATH
setenv LD_LIBRARY_PATH /opt/gsl/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
setenv LIBPATH /opt/gsl/ROLLCOMPILER/lib:$LIBPATH
</file>

<file name="/etc/profile.d/gsl.sh" perms="0644">
export PATH=/opt/gsl/bin:$PATH
export LD_LIBRARY_PATH=/opt/gsl/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
export LIBPATH=/opt/gsl/ROLLCOMPILER/lib:$LIBPATH
</file>

</post>
</kickstart>

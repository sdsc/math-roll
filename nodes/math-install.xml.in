<post>

<file name="/etc/profile.d/atlas.csh" perms="0644">
setenv LD_LIBRARY_PATH /opt/atlas/3.9.45/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
setenv LIBPATH /opt/atlas/3.9.45/ROLLCOMPILER/lib:$LIBPATH
</file>

<file name="/etc/profile.d/atlas.sh" perms="0644">
export LD_LIBRARY_PATH=/opt/atlas/3.9.45/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=/opt/atlas/3.9.45/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
</file>


<file name="/etc/profile.d/lapack.csh" perms="0644">
setenv LD_LIBRARY_PATH /opt/lapack/3.3.1/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
setenv LIBPATH /opt/lapack/3.3.1/ROLLCOMPILER/lib:$LIBPATH
</file>

<file name="/etc/profile.d/lapack.sh" perms="0644">
export LD_LIBRARY_PATH=/opt/lapack/3.3.1/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=/opt/atlas/3.3.1/ROLLCOMPILER/lib:$LD_LIBRARY_PATH
</file>


<file name="/etc/profile.d/scalapack.csh" perms="0644">
